<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsCoursActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:background="@drawable/bottom_round_corner">
        <ImageView
            android:id="@+id/profil_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_baseline_info_24" />
        <TextView
            android:id="@+id/profil_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infos du Cours"
            android:textColor="#1D2424"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/profil_image"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:id="@+id/nomNiveau"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1D2424"
                            android:hint="Niveau"
                            android:textSize="30dp"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:id="@+id/nomSemestre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1D2424"
                            android:hint="Semestre"
                            android:textSize="30dp"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:id="@+id/ueIntitule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1D2424"
                            android:hint="UE"
                            android:textSize="30dp"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:id="@+id/ecIntitule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1D2424"
                            android:hint="EC"
                            android:textSize="30dp"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:id="@+id/vHoraire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1D2424"
                            android:hint="Volume Horaire"
                            android:textSize="30dp"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>